import matplotlib.pyplot as plt

# Example table data
# Replace these with your actual values from experiment
num_processes = [1, 2, 4, 8, 16]   # X-axis (No. of Processes)
speedup = [1.0, 1.8, 3.4, 6.2, 9.5]  # Y-axis (Speedup)

plt.figure(figsize=(7,5))
plt.plot(num_processes, speedup, marker='o', linewidth=2, markersize=8, color='b')

plt.title("Speedup vs Number of Processes", fontsize=14)
plt.xlabel("Number of Processes", fontsize=12)
plt.ylabel("Speedup", fontsize=12)
plt.grid(True, linestyle='--', alpha=0.6)

# Optional: plot ideal speedup line
plt.plot(num_processes, num_processes, 'r--', label="Ideal Speedup")
plt.legend()

plt.show()
