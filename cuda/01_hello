%%writefile hello_world.cu
#include <stdio.h>
#include <cuda_runtime.h>

__global__ void mykernel()
{
    printf("Hello World from thread %d in block %d\n", threadIdx.x, blockIdx.x);
}

int main()
{
    mykernel<<<1, 10>>>();

    cudaDeviceSynchronize();

    return 0;
}

!nvcc -arch=sm_75 hello_world.cu -o hlo
!./hlo
