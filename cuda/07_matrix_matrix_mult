%%writefile matrix_mul_wtime.cu
#include <stdio.h>
#include <cuda_runtime.h>
#include <omp.h>  // for omp_get_wtime()

// CUDA Kernel for Matrix Multiplication
__global__ void matrixMulCUDA(const float *A, const float *B, float *C, int N)
{
    int row = blockIdx.y * blockDim.y + threadIdx.y;
    int col = blockIdx.x * blockDim.x + threadIdx.x;

    if (row < N && col < N) {
        float value = 0.0f;
        for (int k = 0; k < N; ++k)
            value += A[row * N + k] * B[k * N + col];
        C[row * N + col] = value;
    }
}

// CPU Implementation
void matrixMulCPU(const float *A, const float *B, float *C, int N)
{
    for (int i = 0; i < N; ++i)
        for (int j = 0; j < N; ++j) {
            float sum = 0.0f;
            for (int k = 0; k < N; ++k)
                sum += A[i * N + k] * B[k * N + j];
            C[i * N + j] = sum;
        }
}

void testMatrixMul(int N)
{
    printf("\n--------------------------------------\n");
    printf("Matrix Size: %d x %d\n", N, N);

    size_t bytes = N * N * sizeof(float);
    float *h_A = new float[N * N];
    float *h_B = new float[N * N];
    float *h_C_CPU = new float[N * N];
    float *h_C_GPU = new float[N * N];

    // Initialize input matrices
    for (int i = 0; i < N * N; i++) {
        h_A[i] = 1.0f;  // simple data for correctness check
        h_B[i] = 2.0f;
    }

    // -------- CPU Computation --------
    double startCPU = omp_get_wtime();
    matrixMulCPU(h_A, h_B, h_C_CPU, N);
    double endCPU = omp_get_wtime();
    double timeCPU = (endCPU - startCPU) * 1000.0;  // ms

    // -------- GPU Computation --------
    float *d_A, *d_B, *d_C;
    cudaMalloc((void**)&d_A, bytes);
    cudaMalloc((void**)&d_B, bytes);
    cudaMalloc((void**)&d_C, bytes);

    cudaMemcpy(d_A, h_A, bytes, cudaMemcpyHostToDevice);
    cudaMemcpy(d_B, h_B, bytes, cudaMemcpyHostToDevice);

    dim3 threadsPerBlock(16, 16);
    dim3 numBlocks((N + threadsPerBlock.x - 1) / threadsPerBlock.x,
                   (N + threadsPerBlock.y - 1) / threadsPerBlock.y);

    double startGPU = omp_get_wtime();
    matrixMulCUDA<<<numBlocks, threadsPerBlock>>>(d_A, d_B, d_C, N);
    cudaDeviceSynchronize();
    double endGPU = omp_get_wtime();
    double timeGPU = (endGPU - startGPU) * 1000.0;  // ms

    cudaMemcpy(h_C_GPU, d_C, bytes, cudaMemcpyDeviceToHost);

    // -------- Verify correctness --------
    bool correct = true;
    for (int i = 0; i < 10; i++) {
        if (fabs(h_C_CPU[i] - h_C_GPU[i]) > 1e-4) {
            correct = false;
            break;
        }
    }

    // -------- Print Results --------
    printf("CPU Time: %.4f ms\n", timeCPU);
    printf("GPU Time: %.4f ms\n", timeGPU);
    printf("Speedup:  %.2fx\n", timeCPU / timeGPU);
    printf("Result:   %s\n", correct ? "Correct ✅" : "Incorrect ❌");

    // Free memory
    delete[] h_A;
    delete[] h_B;
    delete[] h_C_CPU;
    delete[] h_C_GPU;
    cudaFree(d_A);
    cudaFree(d_B);
    cudaFree(d_C);
}

int main()
{
    int Ns[] = {256, 512, 1024};
    int numTests = sizeof(Ns) / sizeof(Ns[0]);

    for (int i = 0; i < numTests; i++)
        testMatrixMul(Ns[i]);

    return 0;
}

!nvcc -Xcompiler -fopenmp -arch=sm_75 matrix_mul_wtime.cu -o matrix_mul_wtime
!./matrix_mul_wtime
