%%writefile vector_add_2d.cu
#include <stdio.h>
#include <cuda_runtime.h>

#define N 9  // total elements = 9 (for 3x3 threads)

__global__ void vectorAdd_2d(const int *A, const int *B, int *C)
{
    int threadX = threadIdx.x;
    int threadY = threadIdx.y;
    int blockX  = blockIdx.x;
    int blockY  = blockIdx.y;
    int threadsPerBlockX = blockDim.x;
    int threadsPerBlockY = blockDim.y;

    int globalX = blockX * threadsPerBlockX + threadX;
    int globalY = blockY * threadsPerBlockY + threadY;

    int index = globalY * (gridDim.x * threadsPerBlockX) + globalX;

    if (index < N)
        C[index] = A[index] + B[index];
}

int main()
{
    int h_A[N], h_B[N], h_C[N];
    for (int i = 0; i < N; i++) {
        h_A[i] = i;
        h_B[i] = i * 2;
    }

    int *d_A, *d_B, *d_C;
    cudaMalloc((void **)&d_A, N * sizeof(int));
    cudaMalloc((void **)&d_B, N * sizeof(int));
    cudaMalloc((void **)&d_C, N * sizeof(int));

    cudaMemcpy(d_A, h_A, N * sizeof(int), cudaMemcpyHostToDevice);
    cudaMemcpy(d_B, h_B, N * sizeof(int), cudaMemcpyHostToDevice);

    dim3 nblocks(1, 1);
    dim3 nthreads(3, 3); // 9 threads total

    vectorAdd_2d<<<nblocks, nthreads>>>(d_A, d_B, d_C);

    cudaMemcpy(h_C, d_C, N * sizeof(int), cudaMemcpyDeviceToHost);
    cudaDeviceSynchronize();

    printf("Vector addition result:\n");
    for (int i = 0; i < N; i++)
        printf("C[%d] = %d + %d = %d\n", i, h_A[i], h_B[i], h_C[i]);

    cudaFree(d_A);
    cudaFree(d_B);
    cudaFree(d_C);

    return 0;
}

!nvcc -arch=sm_75 vector_add_2d.cu -o vadd2d
!./vadd2d
