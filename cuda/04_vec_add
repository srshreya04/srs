%%writefile vector_add_wtime.cu
#include <stdio.h>
#include <cuda_runtime.h>
#include <omp.h>  // for omp_get_wtime()

__global__ void vectorAddCUDA(const float *A, const float *B, float *C, int N)
{
    int idx = blockIdx.x * blockDim.x + threadIdx.x;
    if (idx < N)
        C[idx] = A[idx] + B[idx];
}

void vectorAddCPU(const float *A, const float *B, float *C, int N)
{
    for (int i = 0; i < N; i++)
        C[i] = A[i] + B[i];
}

void testVectorAdd(int N)
{
    printf("\n-----------------------------------\n");
    printf("N = %d\n", N);

    // Allocate host memory
    float *h_A = new float[N];
    float *h_B = new float[N];
    float *h_C_CPU = new float[N];
    float *h_C_GPU = new float[N];

    // Initialize input vectors
    for (int i = 0; i < N; i++) {
        h_A[i] = i * 1.0f;
        h_B[i] = i * 2.0f;
    }

    // -------- CPU Computation --------
    double startCPU = omp_get_wtime();
    vectorAddCPU(h_A, h_B, h_C_CPU, N);
    double endCPU = omp_get_wtime();
    double timeCPU = (endCPU - startCPU) * 1000.0;  // ms

    // -------- GPU Computation --------
    float *d_A, *d_B, *d_C;
    cudaMalloc((void**)&d_A, N * sizeof(float));
    cudaMalloc((void**)&d_B, N * sizeof(float));
    cudaMalloc((void**)&d_C, N * sizeof(float));

    cudaMemcpy(d_A, h_A, N * sizeof(float), cudaMemcpyHostToDevice);
    cudaMemcpy(d_B, h_B, N * sizeof(float), cudaMemcpyHostToDevice);

    int blockSize = 256;
    int numBlocks = (N + blockSize - 1) / blockSize;

    double startGPU = omp_get_wtime();
    vectorAddCUDA<<<numBlocks, blockSize>>>(d_A, d_B, d_C, N);
    cudaDeviceSynchronize();
    double endGPU = omp_get_wtime();
    double timeGPU = (endGPU - startGPU) * 1000.0;  // ms

    cudaMemcpy(h_C_GPU, d_C, N * sizeof(float), cudaMemcpyDeviceToHost);

    // -------- Verify correctness --------
    bool correct = true;
    for (int i = 0; i < 10; i++) {
        if (fabs(h_C_CPU[i] - h_C_GPU[i]) > 1e-5) {
            correct = false;
            break;
        }
    }

    // -------- Print Results --------
    printf("CPU Time: %.4f ms\n", timeCPU);
    printf("GPU Time: %.4f ms\n", timeGPU);
    printf("Speedup:  %.2fx\n", timeCPU / timeGPU);
    printf("Result:   %s\n", correct ? "Correct ✅" : "Incorrect ❌");

    // Free memory
    delete[] h_A;
    delete[] h_B;
    delete[] h_C_CPU;
    delete[] h_C_GPU;
    cudaFree(d_A);
    cudaFree(d_B);
    cudaFree(d_C);
}

int main()
{
    int Ns[] = {100000, 1000000, 10000000};
    int numTests = sizeof(Ns) / sizeof(Ns[0]);

    for (int i = 0; i < numTests; i++)
        testVectorAdd(Ns[i]);

    return 0;
}

!nvcc -Xcompiler -fopenmp -arch=sm_75 vector_add_wtime.cu -o vector_wtime
!./vector_wtime
